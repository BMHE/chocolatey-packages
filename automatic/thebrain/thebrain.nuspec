    <iconUrl>https://raw.github.com/dtgm/chocolateypackages/master/thebrain.install/thebrain.png</iconUrl>
    <releaseNotes>
	See "%ChocolateyInstall%\lib\thebrain.install-{{PackageVersion}}\content\Release Notes.txt"
	Full Changes [PDF]: http://assets.thebrain.com/documents/TheBrain%208.0%20Release%20Notes.pdf</releaseNotes>
	<dependencies>
      <dependency id="thebrain.install" version="[{{PackageVersion}}]" />
